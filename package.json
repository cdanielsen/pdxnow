{
  "name": "pdxnow",
  "version": "0.1.0",
  "private": true,
  "author": "Christian Danielsen",
  "description": "A place-based snapshot app",
  "engines": {
    "node": ">8.0.0",
    "npm": ">5.0.0"
  },
  "scripts": {
    "start:dev": "concurrently -n \"DEV_SERVER,API_SERVER\" -c \"bgBlue.bold,bgMagenta.bold\" \"react-scripts start\" \"nodemon server.js\"",
    "startz": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "cross-env CI=true snyk test && react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "start": "cross-env NODE_ENV=production node server.js"
  },
  "dependencies": {
    "cross-env": "5.1.3",
    "express": "4.16.2",
    "heroku-ssl-redirect": "0.0.4",
    "lodash.shuffle": "4.2.0",
    "morgan": "1.9.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-feather": "1.0.8",
    "react-scripts": "1.1.0",
    "react-twitter-widgets": "1.7.1",
    "request-promise": "4.2.2",
    "semantic-ui-css": "2.2.14",
    "semantic-ui-react": "0.77.2"
  },
  "devDependencies": {
    "concurrently": "3.5.1",
    "dotenv": "5.0.0",
    "husky": "0.14.3",
    "lint-staged": "6.1.0",
    "nodemon": "1.14.11",
    "prettier": "1.10.2",
    "snyk": "1.69.1"
  },
  "lint-staged": {
    "*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "proxy": "http://localhost:5001"
}
